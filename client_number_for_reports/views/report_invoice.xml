<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">

        <xpath expr="//div[@id='informations']" position="replace">
            <div id="informations" class="row mt32 mb32">
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date">
                    <strong>Fecha Factura:</strong>
                    <p t-field="o.invoice_date"/>
                </div>
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                    <strong>Fecha de Vencimiento:</strong>
                    <p t-field="o.invoice_date_due"/>
                </div>
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.invoice_origin">
                    <strong>Fuente:</strong>
                    <p t-field="o.invoice_origin"/>
                </div>
                <div class="col-auto col-3 mw-100 mb-2" t-if="o.customer_code">
                    <strong>NÂº cliente:</strong>
                    <p t-field="o.customer_code"/>
                </div>
                <div name="reference" class="col-auto col-3 mw-100 mb-2" t-if="o.ref">
                    <strong>Reference:</strong>
                    <p t-field="o.ref"/>
                </div>
            </div>
        </xpath>

    </template>

</odoo>
