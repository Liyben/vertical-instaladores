<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    <record model="ir.ui.view" id="view_sale_order_merge_task_action_confirm">
        <field name="name">sale.order.merge.task.action.confirm.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="groups_id" eval="[(4, ref('merge_pt.group_sales_merge_task_to_confirm'))]"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='action_confirm']" position="replace">
                <button name="merge_task_action_confirm" id="merge_task_action_confirm_not_sent"
                        string="Confirmar" class="btn-primary" type="object"
                        attrs="{'invisible': [('state', 'not in', ['sent'])]}"/>
            </xpath>
            <xpath expr="//button[@name='action_confirm']" position="replace">
                <button name="merge_task_action_confirm" id="merge_task_action_confirm_not_draft" 
                        string="Confirmar" type="object" attrs="{'invisible': [('state', 'not in', ['draft'])]}"/>
            </xpath>
        </field>
    </record>

</odoo>