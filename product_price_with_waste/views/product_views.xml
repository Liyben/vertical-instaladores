<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="product_price_with_waste_form_view">
        <field name="name">product.price.with.waste.form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product_task_material_work.product_task_material_work_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='apply_pricelist']" position="after">
                <label for="percent_waste"/>
                <div name="waste">
                    <field name="percent_waste" groups="base.group_user" attrs="{'invisible': ['|', ('type', '!=', 'service'), ('product_variant_count', '&gt;', 1), ('is_product_variant', '=', False)]}" class="oe_inline"/> %  
                </div>
            </xpath>

        </field>
    </record>
    
</odoo>