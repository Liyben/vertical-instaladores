<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_invoice_groupby_inherit" model="ir.ui.view">
        <field name="name">account.move.groupby</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//group/filter[@name='invoicedate']" position="before">
                <filter string="Cliente con Riesgo" name="name_partner_risk_credit_limit" domain="[]" context="{'group_by':'partner_risk_credit_limit'}"/>
                <!--<filter string="Riesgo" name="name_insurance_credit_limit" domain="[]" context="{'group_by':'insurance_credit_limit'}"/>-->
                <separator/>
            </xpath>
        </field>
    </record>

    <record id="view_invoice_tree" model="ir.ui.view">
        <field name="name">partner_risk_on_invoice.view_invoice_tree</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree" />
        <field name="arch" type="xml">
            <field name="state" position="before">
                <field name="invoice_payment_term_id" optional="hide"/>
                <field name="insurance_credit_limit" avg="Riesgo" />
            </field>
        </field>
    </record>

</odoo>

