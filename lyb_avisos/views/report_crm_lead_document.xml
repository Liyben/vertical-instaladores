<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_crm_lead_notice">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="web.external_layout">
                    <div class="page" style="font-size: 10px !important;">

                        <table class="table table-sm o_main_table">
                            <tbody>
                                <tr>
                                    <td colspan="6" style="background-color:#238AA9;color:#ffffff;font-weight:bold;border:0;">PARTE DE MEDICIÓN <span style="float:right;">Nº AVISO <span t-field="o.sequence_code"/></span></td>                            
                                </tr>
                                <tr>
                                    <td style="font-weight:normal;border:0;">
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold;border:0;">Presupuesto</td>
                                    <td style="font-weight:normal;border:1px solid #238AA9;width: 275px;"></td>
                                    <td style="font-weight:bold;border:0;">Fecha </td>
                                    <td style="font-weight:normal;border: 1px solid #238AA9;width: 125px;"><span t-field="o.date_begin" t-options="{&quot;widget&quot;: &quot;date&quot;}"/></td>
                                    <td style="font-weight:bold;border:0;">Hora </td>
                                    <td style="font-weight:normal;border: 1px solid #238AA9;width: 125px;"><span t-esc="datetime.datetime.strftime(o.date_begin, '%H:%M:%S')"/></td>
                                </tr>
                                <tr>
                                    <td style="font-weight:normal;border:0;">
                                    </td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold;border:0;">Téc. Medición </td>
                                    <td style="font-weight:normal;border: 1px solid #238AA9;"><span t-field="o.worker_one" /></td>
                                    <td style="font-weight:bold;border:0;">Téc. Ppto.</td>
                                    <td colspan="3" style="font-weight:normal;border:1px solid #238AA9;"><span t-field="o.user_id" /></td></tr>
                                <tr>
                                    <td style="font-weight:normal;border:0;">
                                    </td>
                                </tr>                               
                            </tbody>
                        </table>                             
<!--===================DATOS DEL CLIENTE=======================-->                             
                        <table class="table table-sm o_main_table" id="customer_info">
                            <tbody>
                                <tr>
                                    <td colspan="4" style="background-color:#238AA9;color:#ffffff;font-weight:bold;border:0;">CLIENTE</td>
                                </tr>
                                <tr>
                                    <td style="font-weight:normal;border:0;">
                                    </td>
                                </tr>
                                <tr id="contact_person">
                                    <td style="font-weight:bold;">Sr/a.</td>
                                    <td colspan="3" style="font-weight:normal;"><span t-field="o.partner_id"/></td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold;">Dirección:</td>
                                    <td colspan="3" style="font-weight:normal;"><span t-field="o.partner_id.street"/><t t-if="o.partner_id.street2">, </t><span t-field="o.partner_id.street2"/></td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold;width: 150px;">Población / Zona:</td>
                                    <td style="font-weight:normal;"><span t-field="o.partner_id.city"/></td>
                                    <td style="font-weight:bold;">Provincia:</td>
                                    <td style="font-weight:normal;min-width:50px;"><span t-field="o.partner_id.state_id"/></td>
                                </tr>
                                <tr>
                                    <td style="font-weight:bold;">Telf:</td>
                                    <td style="font-weight:normal;"><span t-field="o.partner_id.mobile"/><span t-if="o.partner_id.phone and o.partner_id.mobile"> / </span><span t-field="o.partner_id.phone"/></td>
                                    <td style="font-weight:bold;">E-Mail:</td>
                                    <td style="font-weight:normal;min-width:50px;"><span t-field="o.partner_id.email"/></td>
                                </tr>
                            </tbody>
                        </table>
<!--===================CROQUIS=========================-->
                        <table class="table table-sm o_main_table">
                            <tbody>
                                <tr>
                                    <td style="background-color:#238AA9;color:#ffffff;font-weight:bold;border:1px solid #238AA9;">Croquis</td>
                                </tr>
                                <tr>
                                    <td style="font-weight:normal;border:1px solid #238AA9;text-align:center;"><img src='/lyb_avisos/static/src/img/croquis.png' height="550px" width="830px" /></td>
                                </tr>
                             </tbody>
                        </table>

<!--===================OBSERVACIONES=========================--> 
                        <table class="table table-sm o_main_table">
                            <tbody>
                                <tr>
                                    <td style="background-color:#238AA9;color:#ffffff;font-weight:bold;border:1px solid #238AA9;">OBSERVACIONES</td>
                                </tr>
                                <tr>
                                    <td style="font-weight:normal;border:1px solid #238AA9;"><span t-field="o.note"/></td>
                                </tr>
                            </tbody>
                        </table>
                            
                    </div>
                </t>
            </t>
        </t>
    </template>

</odoo>
