<?xml version="1.0" encoding="UTF-8"?>
<odoo>

   <record model="ir.ui.view" id="sale_order_product_restricted_inherit">
        <field name="name">sale.order.product.restricted.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form//header//field[@name='authorized_transaction_ids']" position="after">
                <field name="can_be_confirmed" invisible="1"/> 
            </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="sale_order_product_restricted_task_materials_ids_inherit">
        <field name="name">sale.order.product.restricted.task_materials_ids.view.form.inherit</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="product_task_material_work.view_sale_order_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="/field[@name='order_line']/form//field[@name='task_materials_ids']/tree//field[@name='material_id']" position="before">
                <field name="have_to_check" optional="show"/> 
            </xpath>
            <xpath expr="/field[@name='order_line']/form//field[@name='task_materials_ids']/tree//field[@name='name']" position="attributes">
                <attribute name="attrs">{'readonly': [('have_to_check','=',True)]}</attribute>
            </xpath>

        </field>
    </record>
    
    <record model="ir.ui.view" id="sale_order_product_restricted_inherit2">
        <field name="name">sale.order.product.restricted.view.form.inherit2</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="merge_pt.view_sale_order_merge_task_action_confirm"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@id='merge_task_action_confirm_not_sent']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('state', 'not in', ['sent']),('can_be_confirmed','=',True)]}</attribute>
            </xpath>
            <xpath expr="//button[@id='merge_task_action_confirm_not_draft']" position="attributes">
                <attribute name="attrs">{'invisible': ['|',('state', 'not in', ['draft']),('can_be_confirmed','=',True)]}</attribute>
            </xpath>

        </field>
    </record>
</odoo>