<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_crm_lead_notice" inherit_id="lyb_avisos.report_crm_lead_notice">

        <xpath expr="//tr[@id='contact_person']" position="replace">
            <tr id="contact_person">
                <td style="font-weight:bold;">Sr/a.</td>
                <td style="font-weight:normal;"><span t-field="o.partner_id"/></td>
                <td style="font-weight:bold;">Contacto Obra:</td>
                <td style="font-weight:normal;"><span t-field="o.contact_person"/><span t-if="o.contact_person and o.contact_mobile"> / </span><span t-field="o.contact_mobile"/></td>
            </tr>
        </xpath>
        
    </template>

</odoo>
