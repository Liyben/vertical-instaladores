<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="partner_contact_person_form_view_avisos">
        <field name="name">partner.contact.person.form.view.avisos</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="arch" type="xml">

            <xpath expr="//group[@name='opportunity_partner']" position="inside">
                <label for="contact_name_mobile_person"/>
                <div class="o_row" class="oe_inline">
                    <field name="contact_person" id="contact_name_mobile_person" placeholder="Nombre..."/>
                    <field name="contact_mobile" widget="phone" placeholder="MÃ³vil..."/>
                </div>
            </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="partner_contact_person_view_create_aviso_simplified">
        <field name="name">partner.contact.person.view.create.aviso.simplified</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="lyb_avisos.view_create_aviso_simplified" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='title']" position="after">
                
                <field name="contact_person" invisible="1"/>
                <field name="contact_mobile" invisible="1"/>

            </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="partner_contact_person_quick_create_opportunity_form">
        <field name="name">partner.contact.person.quick.create.opportunity.form</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.quick_create_opportunity_form" />
        <field name="arch" type="xml">

            <xpath expr="//field[@name='title']" position="after">
                
                <field name="contact_person" invisible="1"/>
                <field name="contact_mobile" invisible="1"/>

            </xpath>

        </field>
    </record>

</odoo>