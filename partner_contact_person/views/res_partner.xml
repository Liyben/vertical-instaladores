<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_partner_simple_form_contact_person" model="ir.ui.view">
        <field name="name">Add contact person on partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_simple_form" />
        <field name="arch" type="xml">
            <field name="function" position="after">
                <label for="contact_name_mobile_person"/>
                <div class="o_row">
                    <field name="contact_person" id="contact_name_mobile_person" placeholder="Nombre..."/>
                    <field name="contact_mobile" widget="phone" placeholder="Móvil..."/>
                </div>
            </field>
        </field>
    </record>
    <record id="view_partner_form_contact_person" model="ir.ui.view">
        <field name="name">Add contact person on partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <field name="function" position="after">
                <label for="contact_name_mobile_person"/>
                <div class="o_row">
                    <field name="contact_person" id="contact_name_mobile_person" placeholder="Nombre..."/>
                    <field name="contact_mobile" widget="phone" placeholder="Móvil..."/>
                </div>
            </field>
            <xpath
                expr="//field[@name='child_ids']/form//field[@name='mobile']"
                position="after"
            >
                <label for="contact_name_mobile_person"/>
                <div class="o_row">
                    <field name="contact_person" id="contact_name_mobile_person" placeholder="Nombre..."/>
                    <field name="contact_mobile" widget="phone" placeholder="Móvil..."/>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
