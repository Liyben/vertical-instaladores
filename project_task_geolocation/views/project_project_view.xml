<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    
    
    <!--Form view-->
    <record model="ir.ui.view" id="project_timesheet_time_control_form_project_inherited">
        <field name="name">project.timesheet.time.control.form.project.inherited</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_timesheet_time_control.project_invoice_form"/>
        <field name="arch" type="xml">
            <!--Botones para el grupo administrativo-->
            <xpath expr="//button[@name='button_start_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <xpath expr="//button[@name='button_end_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>

            <!--Botones para el grupo operarios-->
            <div name="button_box" position="inside">
                <field name="show_geolocation_control" invisible="1" />
                <button
                    name="get_check_in_geolocation"
                    string="Geolocalizar"
                    type="object"
                    icon="fa-map-marker text-success"
                    attrs="{'invisible': [('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'check-in')]}"
                    class="oe_stat_button"
                    title="Geolocalizar"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <button
                    name="get_start_geolocation"
                    string="Comenzar trabajo"
                    type="object"
                    icon="fa-play-circle text-success"
                    attrs="{'invisible': [('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'start')]}"
                    class="oe_stat_button"
                    title="Comenzar trabajo"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <button
                    name="get_check_out_geolocation"
                    string="Geolocalizar"
                    type="object"
                    icon="fa-map-marker text-warning"
                    attrs="{'invisible': [('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'check-out')]}"
                    class="oe_stat_button"
                    title="Geolocalizar"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <button
                    name="get_stop_geolocation"
                    string="Detener trabajo"
                    type="object"
                    icon="fa-stop-circle text-warning"
                    attrs="{'invisible': [('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'stop')]}"
                    class="oe_stat_button"
                    title="Detener trabajo"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
            </div>
        </field>
    </record>

    <!--Kanban view-->
    <record model="ir.ui.view" id="project_timesheet_time_control_kanban_project_inherited">
        <field name="name">project.timesheet.time.control.kanban.project.inherited</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project_timesheet_time_control.view_project_kanban_inherited"/>
        <field name="arch" type="xml">
            <!--Botones para el grupo administrativo-->
            <xpath expr="//a[@name='button_start_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <xpath expr="//a[@name='button_end_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>

            <!--Botones para el grupo operarios-->
            <xpath expr="//*[hasclass('o_project_kanban_boxes')]" position="inside">
                <field name="show_geolocation_control" invisible="1" />
                <a
                    name="get_check_in_geolocation"
                    attrs="{'invisible': [('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'check-in')]}"
                    class="o_project_kanban_box"
                    tabindex="-1"
                    type="object"
                    groups="project_task_geolocation.group_geolocation_worker"
                >
                    <div>
                        <span class="o_label">
                            <i class="fa fa-lg fa-map-marker text-success" />
                            Geolocalizar
                        </span>
                    </div>
                </a>
                <a
                    name="get_start_geolocation"
                    attrs="{'invisible': [('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'start')]}"
                    class="o_project_kanban_box"
                    tabindex="-1"
                    type="object"
                    groups="project_task_geolocation.group_geolocation_worker"
                >
                    <div>
                        <span class="o_label">
                            <i class="fa fa-lg fa-play-circle text-success" />
                            Comenzar trabajo
                        </span>
                    </div>
                </a>
                <a
                    name="get_check_out_geolocation"
                    attrs="{'invisible': [('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'check-out')]}"
                    class="o_project_kanban_box"
                    tabindex="-1"
                    type="object"
                    groups="project_task_geolocation.group_geolocation_worker"
                >
                    <div>
                        <span class="o_label">
                            <i class="fa fa-lg fa-map-marker text-warning" />
                            Geolocalizar
                        </span>
                    </div>
                </a>
                <a
                    name="button_end_work"
                    attrs="{'invisible': [('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'stop')]}"
                    class="o_project_kanban_box"
                    tabindex="-1"
                    type="object"
                    groups="project_task_geolocation.group_geolocation_worker"
                >
                    <div>
                        <span class="o_label">
                            <i class="fa fa-lg fa-stop-circle text-warning" />
                            Detener trabajo
                        </span>
                    </div>
                </a>
            </xpath>
        </field>
    </record>

