<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="project_task_geolocation_form_view">
        <field name="name">project.task.geolocation.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='partner_id']" position='before'>
                <field name="latitude" class="oe_inline" invisible="1"/>
                <field name="longitude" class="oe_inline" invisible="1"/>
            </xpath>
        </field>
    </record>

    <!--TASK-->
    <!--Form view-->
    <record model="ir.ui.view" id="project_timesheet_time_control_form_task_inherited">
        <field name="name">project.timesheet.time.control.form.task.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project_timesheet_time_control.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <!--Botones para el grupo administrativo-->
            <xpath expr="//button[@name='button_start_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <xpath expr="//button[@name='button_end_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>

            <!--Botones para el grupo operarios-->
            <div name="button_box" position="inside">
                <field name="show_geolocation_control" invisible="1" />
                <button
                    name="get_check_in_geolocation"
                    string="Geolocalizar"
                    type="object"
                    icon="fa-map-marker text-success"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'check-in')]}"
                    class="oe_stat_button"
                    title="Geolocalizar"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <button
                    name="get_start_geolocation"
                    string="Comenzar trabajo"
                    type="object"
                    icon="fa-play-circle text-success"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'start')]}"
                    class="oe_stat_button"
                    title="Comenzar trabajo"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <button
                    name="get_check_out_geolocation"
                    string="Geolocalizar"
                    type="object"
                    icon="fa-map-marker text-warning"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'check-out')]}"
                    class="oe_stat_button"
                    title="Geolocalizar"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <button
                    name="get_stop_geolocation"
                    string="Detener trabajo"
                    type="object"
                    icon="fa-stop-circle text-warning"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'stop')]}"
                    class="oe_stat_button"
                    title="Detener trabajo"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
            </div>
        </field>
    </record>

    <!--Kanban view-->
    <record model="ir.ui.view" id="project_timesheet_time_control_kanban_task_inherited">
        <field name="name">project.timesheet.time.control.kanban.task.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project_timesheet_time_control.view_task_kanban"/>
        <field name="arch" type="xml">
            <!--Botones para el grupo administrativo-->
            <xpath expr="//a[@name='button_start_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <xpath expr="//a[@name='button_end_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>

            <!--Botones para el grupo operarios-->
            <xpath expr="//*[hasclass('oe_kanban_bottom_left')]" position="inside">
                <field name="show_geolocation_control" invisible="1" />
                <a
                    name="get_check_in_geolocation"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'check-in')]}"
                    class="o_kanban_inline_block fa fa-lg fa-map-marker text-success"
                    string="Geolocalizar"
                    tabindex="-1"
                    type="object"
                    title="Geolocalizar"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <a
                    name="get_start_geolocation"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'start')]}"
                    class="o_kanban_inline_block fa fa-lg fa-play-circle text-success"
                    string="Comenzar trabajo"
                    tabindex="-1"
                    type="object"
                    title="Comenzar trabajo"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <a
                    name="get_check_out_geolocation"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'check-out')]}"
                    class="o_kanban_inline_block fa fa-lg fa-map-marker text-warning"
                    string="Geolocalizar"
                    tabindex="-1"
                    type="object"
                    title="Geolocalizar"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <a
                    name="button_end_work"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'stop')]}"
                    class="o_kanban_inline_block fa fa-lg fa-stop-circle text-warning"
                    string="Detener trabajo"
                    tabindex="-1"
                    type="object"
                    title="Detener trabajo"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
            </xpath>

        </field>
    </record>

    <!--Tree view-->
    <record model="ir.ui.view" id="project_timesheet_time_control_tree_task_inherited">
        <field name="name">project.timesheet.time.control.tree.task.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project_timesheet_time_control.view_task_tree2_inherited"/>
        <field name="arch" type="xml">
            <!--Botones para el grupo administrativo-->
            <xpath expr="//button[@name='button_start_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <xpath expr="//button[@name='button_end_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>

            <!--Botones para el grupo operarios-->
            <tree position="inside">
                <field name="show_geolocation_control" invisible="1" />
                <button
                    name="get_check_in_geolocation"
                    string="Geolocalizar"
                    type="object"
                    tabindex="-1"
                    icon="fa-map-marker text-success"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'check-in')]}"
                    class="oe_stat_button"
                    title="Geolocalizar"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <button
                    name="get_start_geolocation"
                    string="Comenzar trabajo"
                    tabindex="-1"
                    type="object"
                    icon="fa-play-circle text-success"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'start'), ('show_geolocation_control', '!=', 'start')]}"
                    class="oe_stat_button"
                    title="Comenzar trabajo"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <button
                    name="get_check_out_geolocation"
                    string="Geolocalizar"
                    tabindex="-1"
                    type="object"
                    icon="fa-map-marker text-warning"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'check-out')]}"
                    class="oe_stat_button"
                    title="Geolocalizar"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
                <button
                    name="get_stop_geolocation"
                    string="Detener trabajo"
                    tabindex="-1"
                    type="object"
                    icon="fa-stop-circle text-warning"
                    attrs="{'invisible': ['|', ('show_time_control', '!=', 'stop'), ('show_geolocation_control', '!=', 'stop')]}"
                    class="oe_stat_button"
                    title="Detener trabajo"
                    groups="project_task_geolocation.group_geolocation_worker"
                />
            </tree>

        </field>
    </record>

    <!--TIMESHEET_IDS-->
    <!--Botones geolocalización-->
    <record model="ir.ui.view" id="view_task_form2_inherited">
        <field name="name">Add geolocation tree and kanban view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited" />
        <field name="arch" type="xml">
            <!-- Sub-tree view for timesheet_ids -->
            <xpath expr="//field[@name='timesheet_ids']/tree//field[@name='unit_amount']" position='after'>
                <field name="start_latitude" invisible="1"/>
                <field name="start_longitude" invisible="1"/>
                <button
                    name="button_start_geolocation"
                    string="Comienzo"
                    tabindex="-1"
                    type="object"
                    icon="fa-map-marker text-success"
                    class="oe_stat_button"
                />
                <field name="end_latitude" invisible="1"/>
                <field name="end_longitude" invisible="1"/>
                <button
                    name="button_stop_geolocation"
                    string="Fin"
                    tabindex="-1"
                    type="object"
                    icon="fa-map-marker text-warning"
                    class="oe_stat_button"
                />
            </xpath>
            <!-- Sub-kanban view for timesheet_ids -->
            <xpath expr="//field[@name='timesheet_ids']/kanban//templates//field[@name='unit_amount']" position="after">
                <field name="start_latitude" invisible="1"/>
                <field name="start_longitude" invisible="1"/>
                <a
                    name="button_start_geolocation"
                    tabindex="-1"
                    type="object"
                    string="Comienzo"
                    class="o_kanban_inline_block fa fa-lg fa-map-marker text-success"
                    title="Comienzo"
                />
                <field name="end_latitude" invisible="1"/>
                <field name="end_longitude" invisible="1"/>
                <a
                    name="button_stop_geolocation"
                    tabindex="-1"
                    type="object"
                    string="Fin"
                    class="o_kanban_inline_block fa fa-lg fa-map-marker text-warning"
                    title="Fin"
                />
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_task_form3_inherited">
        <field name="name">Add geolocation form view</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project_timesheet_time_control.view_task_form2_inherited" />
        <field name="arch" type="xml">
            <!-- Sub-form view for timesheet_ids -->
            <xpath expr="//field[@name='unit_amount']" position='after'>
                <field name="start_latitude" invisible="1"/>
                <field name="start_longitude" invisible="1"/>
                <field name="end_latitude" invisible="1"/>
                <field name="end_longitude" invisible="1"/>
            </xpath>
            <div name="button_box" position="inside">
                <button
                    name="button_start_geolocation"
                    string="Comienzo"
                    type="object"
                    icon="fa-map-marker text-success"
                    class="oe_stat_button"
                    title="Comienzo"
                />
                <button
                    name="button_stop_geolocation"
                    string="Fin"
                    type="object"
                    icon="fa-map-marker text-warning"
                    class="oe_stat_button"
                    title="Fin"
                />
            </div>
        </field>
    </record>

    <!--Botones para el grupo administrativo-->
    <record model="ir.ui.view" id="project_timesheet_time_control_timesheet_ids_inherited">
        <field name="name">project.timesheet.time.control.timesheet_ids.inherited</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project_timesheet_time_control.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <!-- Sub-form view for timesheet_ids -->
            <xpath expr="//field[@name='timesheet_ids']/form/sheet/button[@name='button_resume_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <xpath expr="//field[@name='timesheet_ids']/form/sheet/button[@name='button_end_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <!-- Sub-tree view for timesheet_ids -->
            <xpath expr="//field[@name='timesheet_ids']/tree/button[@name='button_resume_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <xpath expr="//field[@name='timesheet_ids']/tree/button[@name='button_end_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <!-- Sub-kanban view for timesheet_ids -->
            <xpath expr="//a[@name='button_resume_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
            <xpath expr="//a[@name='button_end_work']" position="attributes">
                <attribute name="groups">project_task_geolocation.group_geolocation_administrative</attribute>
            </xpath>
        </field>
    </record>

</odoo>