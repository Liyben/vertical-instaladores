<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <template id="report_saleorder_document" inherit_id="product_task_material_work.report_saleorder_document">

        <xpath expr="//td[@name='td_name']" position="inside">
            <t t-if="line.task_materials_ids">
                <br/>
                <t t-foreach="line.task_materials_ids" t-as="material">
                    <t t-if="material.material_id.concatenate_description">
                        <span t-field="material.material_id.name"/>. 
                        <span t-field="material.name"/>
                        <br/>
                    </t>
                </t>
            </t>
        </xpath>

    </template>

</odoo>