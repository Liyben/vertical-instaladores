<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="login_layout_hide_powered_by_and_manage_db" inherit_id="web.login_layout" name="Login Layout">
        <xpath expr="//div[@class='container py-5']" position="before">
            <t t-set="disable_footer" t-value="1"/>
        </xpath>
    </template>

    <template id="login_layout_replace_selector_db" inherit_id="web.login" name="Login">
        <xpath expr="//span[@class='input-group-append']" position="replace">
            <span class="input-group-append">
                <a role="button" href="/web/db_manager/liyben/v_14/selector" class="btn btn-secondary">Select <i class="fa fa-database" role="img" aria-label="Database" title="Database"></i></a>
            </span>
        </xpath>
    </template>

</odoo>
