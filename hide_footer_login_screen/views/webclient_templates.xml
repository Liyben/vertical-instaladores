<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="login_layout_hide_footer" inherit_id="web.login_layout" name="Login Layout">
        <xpath expr="//div[@class='text-center small mt-4 pt-3 border-top']" position="before">
            <t t-set="disable_footer" t-value="1"/>
        </xpath>
    </template>
</odoo>