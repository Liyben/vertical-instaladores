<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- view of the Wizard Form -->
    <record id="project_task_convert2order_view_form" model="ir.ui.view">
        <field name="model">project.task.convert2order</field>
        <field name="arch" type="xml">
            <form string="Crear Presupuesto">
                <group>
                    <field name="product_id" domain="[('auto_create_task', '=', True)]"/>
                </group>
                <footer>
                    <button
                        type="object"
                        name="action_project_task_to"
                        string="Crear Presupuesto"
                        class="btn-primary"
                    />
                    <button string="Cancelar" class="btn-secondary" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <!-- action of converting, via wizard -->
    <record id="project_task_convert2order_action" model="ir.actions.act_window">
        <field name="name">Crear Presupuesto</field>
        <field name="res_model">project.task.convert2order</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
