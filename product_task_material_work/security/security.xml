    <!-- Rules -->
    <record model="ir.rule" id="record_product_task_material_shared_company_rule">
        <field name="name">Product Task Material: multi-company</field>
        <field name="model_id" ref="model_product_task_material"/>
        <field name="global" eval="True"/>
        <field name="domain_force">
            ['|', ('company_id', '=', False), ('company_id', 'in', company_ids)]
        </field>
    </record>

    <record model="ir.rule" id="record_product_task_work_shared_company_rule">
        <field name="name">Product Task Work: multi-company</field>
