<?xml version="1.0" encoding="utf-8"?>
<odoo>
<data noupdate="1">
    <record id="group_sales_margin" model="res.groups">
        <field name="name">Mostar margen en presupuestos y pedidos de venta.</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_sales_apply_pricelist" model="res.groups">
        <field name="name">Permite aplicar tarifa sobre productos partida.</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_sales_product_cost" model="res.groups">
        <field name="name">Mostar coste en linea de presupuesto de productos.</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>

    <record id="group_sales_merge_task_to_confirm" model="res.groups">
        <field name="name">Fusionar partes de trabajo al confirmar presupuesto.</field>
        <field name="category_id" ref="base.module_category_hidden"/>
    </record>
