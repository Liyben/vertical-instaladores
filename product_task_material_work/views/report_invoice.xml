<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Plantilla Sale Service -->
    
    <template id="report_invoice_document" inherit_id="account.report_invoice_document">

        <xpath expr="//div[@class='page']" position="inside">
            <link rel="stylesheet" href="/product_task_material_work/static/src/css/report.css"/>
        </xpath>

        <xpath expr="//div[@class='page']" position="attributes">
          <attribute name="style">font-size: 11px !important;</attribute>
        </xpath>
        
        <xpath expr="//div[@id='informations']" position="replace">
            <div id="informations" class="row mt32 mb32">
                <div class="col-xs-2" t-if="o.invoice_date">
                    <strong>Fecha Factura:</strong>
                    <p t-field="o.invoice_date"/>
                </div>
                <div class="col-xs-2" t-if="o.invoice_date_due and o.move_type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
                    <strong>Fecha de Vencimiento:</strong>
                    <p t-field="o.invoice_date_due"/>
                </div>
                <div class="col-xs-2" t-if="o.invoice_origin">
                    <strong>Fuente:</strong>
                    <p t-field="o.invoice_origin"/>
                </div>
                <div class="col-xs-2" t-if="o.customer_code">
                    <strong>Nº cliente:</strong>
                    <p t-field="o.customer_code"/>
                </div>
                <div name="reference" class="col-xs-2" t-if="o.ref">
                    <strong>Reference:</strong>
                    <p t-field="o.ref"/>
                </div>
            </div>
        </xpath>

        <xpath expr="//table[@name='invoice_line_table']" position="before">
            <t t-if="not display_discount">
                <t t-foreach="o.invoice_line_ids" t-as="line">
                    <t t-set="display_discount" t-value="any([work.discount for work in line.task_works_ids])"/>
                    <t t-if="not display_discount">
                        <t t-set="display_discount" t-value="any([material.discount for material in line.task_materials_ids])"/>
                    </t>
                </t>
            </t>
        </xpath>
        
        <xpath expr="//table[@name='invoice_line_table']" position="replace">
            <table class="table table-sm o_main_table" name="invoice_line_table">
                <thead>
                    <tr>
                        <th name="th_description" class="text-left"><span>Descripción</span></th>
                        <th name="th_quantity" class="text-right"><span>Cantidad</span></th>
                        <th name="th_priceunit" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}"><span>P. Und</span></th>
                        <th name="th_price_unit" t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                            <span>Desc.%</span>
                        </th>
                        <th name="th_subtotal" class="text-right">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Importe</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="invoice_tbody">
                    <t t-set="current_subtotal" t-value="0"/>
                    <t t-set="lines" t-value="o.invoice_line_ids.sorted(key=lambda l: (-l.sequence, l.date, l.move_name, -l.id), reverse=True)"/>

                    <t t-foreach="lines" t-as="line">
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type" name="account_invoice_line_accountable">
                                <td name="account_invoice_line_name"><span t-field="line.name" t-options="{'widget': 'text'}"/></td>
                                <!-- IMPRESION DE SOLO TEXTO CUANDO LA CANTIDAD ES 0 -->
                                <td class="text-right">
                                    <t t-if="not line.quantity == 0">
                                        <span t-field="line.quantity"/>
                                        <span t-field="line.product_uom_id" groups="uom.group_uom"/>
                                    </t>
                                </td>
                                <td t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <t t-if="not line.quantity == 0">
                                        <span class="text-nowrap" t-field="line.price_unit"/>
                                    </t>
                                </td>
                                <td t-if="display_discount" t-attf-class="text-right {{ 'd-none d-md-table-cell' if report_type == 'html' else '' }}">
                                    <t t-if="not line.quantity == 0">
                                        <span class="text-nowrap" t-field="line.discount"/>
                                    </t>
                                </td>
                                <td class="text-right o_price_total">
                                    <t t-if="not line.quantity == 0">
                                        <span class="text-nowrap" t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span class="text-nowrap" t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </t>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td colspan="99">
                                    <span t-field="line.name" t-options="{'widget': 'text'}"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or lines[line_index+1].display_type == 'line_section')">
                            <tr class="is-subtotal text-right">
                                <td colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>
            </table>
        </xpath>

        <xpath expr="//span[@t-field='line.name']/../.." position="inside">

                <t t-if="line.task_works_ids and line.detailed_time">
                    <t t-set="uom_hour" t-value="line.env.ref('uom.product_uom_hour')"/>
                    <t t-raw="'&lt;/tr&gt;&lt;tr class=\'works_title\'&gt;'"/>
                        <td class="works_lbl">Total Trabajos Und.</td>
                        <td class="works_total_hours">
                            <t t-if="line.detailed_time">
                                <!--<span t-field="line.total_hours"/>
                                <span t-esc="'{0:,.2f}'.format(line.total_hours * line.product_uom_qty).replace('.', ',')"/>
                                <span groups="uom.group_uom" t-field="uom_hour.name"/>-->
                            </t>
                        </td>
                        <td class="works_hours_price">
                            <!--<t t-if="line.workforce_id and line.detailed_time">
                                <span t-field="line.workforce_id.lst_price" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </t>-->
                        </td>
                        <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line"></td>
                        <td class="works_total_amount">
                            <t t-if="line.detailed_price_time">
                                <span t-esc="'{0:,.2f}'.format(line.total_sp_work).replace('.', ',')"/> <span t-field="o.currency_id.symbol"/>
                                <!--<span t-field="line.total_sp_work" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>-->
                            </t>
                        </td>
                    <t t-foreach="line.task_works_ids" t-as="work">
                        <t t-raw="'&lt;/tr&gt;&lt;tr class=\'works_line\'&gt;'"/>
                        <!--<td class="works_line_name"></td>-->
                        <td class="works_line_name">
                            <t t-if="line.detailed_time">
                                <span t-field="work.name"/>
                            </t>
                        </td>
                        <td class="works_line_hours">
                            <t t-if="line.detailed_price_time">
                                <!--<span t-field="work.hours"/>-->
                                <span t-esc="'{0:,.2f}'.format(work.hours).replace('.', ',')"/>
                                <span groups="uom.group_uom" t-field="uom_hour.name"/>
                            </t>
                        </td>
                        <!-- REPORT DESGLOSE HORAS -->
                        <td class="materials_line_price">
                            <t t-if="line.detailed_price_time">
                                <span t-field="work.sale_price_unit" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                            </t>
                        </td>
                        <td class="materials_line_price" t-if="display_discount" groups="product.group_discount_per_so_line">
                            <t t-if="line.detailed_price_time">
                                <span t-esc="'{0:,.2f}'.format(work.discount).replace('.', ',')"/>
                            </t>
                        </td>
                        <td class="materials_line_price">
                            <t t-if="line.detailed_price_time">
                                <span t-esc="'{0:,.2f}'.format(work.sale_price_unit * work.hours * (1 - (work.discount/100))).replace('.', ',')"/> <span t-field="o.currency_id.symbol"/>
                              <!--<span t-field="work.sale_price" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>-->  
                            </t>
                        </td>
                    </t>
                </t>
                <t t-if="line.task_materials_ids and line.detailed_materials">
                    <t t-raw="'&lt;/tr&gt;&lt;tr class=\'materials_title\'&gt;'"/>
                        <!--<td class="materials_lbl"></td>-->
                        <td class="materials_lbl">Total Materiales Und.</td>
                        <td></td>
                        <td></td>
                        <td t-if="display_discount" class="text-right" groups="product.group_discount_per_so_line"></td>
                        <td class="materials_total_amount">
                            <t t-if="line.detailed_price_materials">
                                <span t-esc="'{0:,.2f}'.format(line.total_sp_material).replace('.', ',')"/> <span t-field="o.currency_id.symbol"/>
                                <!--<span t-field="line.total_sp_material" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>-->
                            </t>
                        </td>
                    <t t-foreach="line.task_materials_ids" t-as="material">
                        <t t-raw="'&lt;/tr&gt;&lt;tr class=\'materials_line\'&gt;'"/>
                        <!--<td class="materials_line_name"></td>-->
                        <td class="materials_line_name">
                            <!--<span t-field="material.material_id.display_name"/>-->
                            <t t-if="material.name"><span t-field="material.name"/></t>
                            <t t-if="not material.name"><span t-field="material.material_id.name"/></t>
                        </td>
                        <td class="materials_line_qty">
                            <!--<span t-field="material.quantity"/>-->
                            <span t-esc="'{0:,.2f}'.format(material.quantity).replace('.', ',')"/>
                            <span groups="uom.group_uom" t-field="material.material_id.uom_id.name"/>
                        </td>
                        <td class="materials_line_price">
                            <t t-if="line.detailed_price_materials">
                                <span t-field="material.sale_price_unit" t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </t>
                        </td>
                        <td class="materials_line_qty" t-if="display_discount" groups="product.group_discount_per_so_line">
                            <t t-if="line.detailed_price_materials">
                                <span t-esc="'{0:,.2f}'.format(material.discount).replace('.', ',')"/>
                            </t>
                        </td>
                        <td class="materials_line_price">
                            <t t-if="line.detailed_price_materials">
                                <span t-esc="'{0:,.2f}'.format(material.sale_price_unit * material.quantity * (1 - (material.discount/100))).replace('.', ',')"/> <span t-field="o.currency_id.symbol"/>
                                <!--<span t-field="material.sale_price" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>-->  
                            </t>
                        </td>
                    </t>
                </t>

        </xpath>
    </template>

</odoo>
