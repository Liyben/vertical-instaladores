<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record model="ir.ui.view" id="view_account_move_form">
        <field name="name">account.move.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
           <xpath expr="//field[@name='payment_reference']" position="before">
                <field name="customer_code"/>
                <button name="recompute_balance" type="object" string="Actualizar" class="oe_highlight" />
            </xpath>

            <!--
            <xpath expr="//page[@name='other_info']//field[@name='name']" position="replace">
                
            </xpath>

            <xpath expr="//field[@name='payment_term_id']" position="before">
                <field name="name"/>
            </xpath>
            -->
            
            <!--Editable en vista form
            <xpath expr="//field[@name='invoice_line_ids']/tree" position="attributes">
                <attribute name="editable"/>
            </xpath> -->

            <xpath expr="//field[@name='invoice_line_ids']/form/sheet/group" position="inside">
                <field name="price_subtotal" invisible="1"/>
                <field name="price_total" string="Total" invisible="1"/>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='partner_id']" position="before">
                <field name="auto_create_task" invisible="1"/>
                <field name="detailed_time" invisible="1"/>
                <field name="detailed_subtotal_price_time" attrs="{'invisible': [('detailed_time','=', False)]}" invisible="1"/>
                <field name="detailed_price_time" attrs="{'invisible': [('detailed_time','=', False)]}" invisible="1"/>
                <field name="detailed_materials" invisible="1"/>
                <field name="detailed_subtotal_price_materials" attrs="{'invisible': [('detailed_materials','=', False)]}" invisible="1"/>
                <field name="detailed_price_materials" attrs="{'invisible': [('detailed_materials','=', False)]}" invisible="1"/>
                <!-- Buttons -->
                <field name="parent_state" invisible="1"/>
                <button name="action_invoice_line_open"
                        type="object"
                        icon="fa-pencil-square-o"
                        string="Editar"
                        class="float-right" 
                        attrs="{'invisible' : [('parent_state', '!=', 'draft')]}"/>
            </xpath>

            <xpath expr="//field[@name='line_ids']/tree/field[@name='product_id']" position="before">
                <field name="auto_create_task" invisible="1"/>
                <field name="detailed_time" invisible="1"/>
                <field name="detailed_subtotal_price_time" attrs="{'invisible': [('detailed_time','=', False)]}" invisible="1"/>
                <field name="detailed_price_time" attrs="{'invisible': [('detailed_time','=', False)]}" invisible="1"/>
                <field name="detailed_materials" invisible="1"/>
                <field name="detailed_subtotal_price_materials" attrs="{'invisible': [('detailed_materials','=', False)]}" invisible="1"/>
                <field name="detailed_price_materials" attrs="{'invisible': [('detailed_materials','=', False)]}" invisible="1"/>
            </xpath>

        </field>
    </record>

    <record model="ir.ui.view" id="view_account_move_line_form">
        <field name="name">account.move.line.form.inherit</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">

            <xpath expr="//field[@name='invoice_line_ids']/form/sheet/group" position="before">
                 <group>
                    <group>
                        <field name="detailed_time"/>
                        <field name="detailed_subtotal_price_time" attrs="{'invisible': [('detailed_time','=', False)]}"/>
                        <field name="detailed_price_time" attrs="{'invisible': [('detailed_time','=', False)]}"/>
                    </group>
                    <group>
                        <field name="detailed_materials"/>
                        <field name="detailed_subtotal_price_materials" attrs="{'invisible': [('detailed_materials','=', False)]}"/>
                        <field name="detailed_price_materials" attrs="{'invisible': [('detailed_materials','=', False)]}"/>
                    </group>
                </group>
            </xpath>

            <xpath expr="//field[@name='invoice_line_ids']/form/sheet" position="inside">
                <field name="auto_create_task" invisible="1"/>
                <div name="partida" attrs="{'invisible':[('auto_create_task','!=',True)]}">
                        <group string="Trabajos">
                            <group>
                                <field name="workforce_id" invisible="1" ref="product_task_material_work.mano_obra_00" domain="[('categ_id', '=', %(product_task_material_work.product_category_mo)d )]"/>
                            </group>
                            <field name="task_works_ids" nolabel="1" context="{'default_product_id': active_id}">
                                <tree string="Trabajos" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="work_id"/>
                                    <field name="name"/>
                                    <field name="hours" sum="Horas totales" widget="float_time"/>
                                    <field name="cost_price_unit" optional="show"/>
                                    <field name="sale_price_unit" optional="show"/>
                                    <field name="discount" groups="product.group_discount_per_so_line" optional="show"/>
                                    <field name="cost_price" sum="Total P.C." optional="hide"/>
                                    <field name="sale_price" sum="Total P.V." optional="show"/>
                                    <field name="work_margin" groups="product_task_material_work.group_sales_margin" optional="hide"/>
                                    <field name="work_margin_percent" optional="show" groups="product_task_material_work.group_sales_margin" widget="percentage"/>
                                </tree>
                            </field>
                            <group class="pull-right">
                                <field name="total_sp_work" invisible="1"/>
                                <field name="total_cp_work" invisible="1"/>
                                <field name="total_hours" invisible="1"/>
                                <label for="benefit_work_amount" string="Beneficio"/>
                                <div>
                                    <field name="benefit_work_amount" groups="product_task_material_work.group_sales_margin" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <span> | </span>
                                    <field name="benefit_work" groups="product_task_material_work.group_sales_margin" widget="percentage"/>
                                </div>
                            </group>
                        </group>
                        <group string="Materiales">
                            <field name="task_materials_ids" nolabel="1" context="{'default_product_id':active_id}">
                                <tree string="Materiales" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="material_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="cost_price_unit" optional="show"/>
                                    <field name="sale_price_unit" optional="show"/>
                                    <field name="discount" groups="product.group_discount_per_so_line" optional="show"/>
                                    <field name="cost_price" sum="Total P.C." optional="hide"/>
                                    <field name="sale_price" sum="Total P.V." optional="show"/>
                                    <field name="material_margin" groups="product_task_material_work.group_sales_margin" optional="hide"/>
                                    <field name="material_margin_percent" optional="show" groups="product_task_material_work.group_sales_margin" widget="percentage"/>
                                </tree>
                            </field>
                            <group class="pull-right">
                                <field name="total_sp_material" invisible="1"/>
                                <field name="total_cp_material" invisible="1"/>
                                <div>
                                    <field name="benefit_material_amount" groups="product_task_material_work.group_sales_margin" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <span> | </span>
                                    <field name="benefit_material" groups="product_task_material_work.group_sales_margin" widget="percentage"/>
                                </div>
                            </group>
                        </group>
                </div>
                
            </xpath>
        </field>
    </record>

    <record id="view_invoice_line_form" model="ir.ui.view">
        <field name="name">invoice.line.form</field>
        <field name="model">account.move.line</field>
        <field name="arch" type="xml">
            <form string="Linea de factura" create="false">
                <sheet>
                    <field name="product_uom_category_id" invisible="1"/>
                    <field name="display_type" invisible="1"/>
                    <field name="parent_state" invisible="1"/>
                    <group>
                        <group>
                            <field name="detailed_time"/>
                            <field name="detailed_subtotal_price_time" attrs="{'invisible': [('detailed_time','=', False)]}"/>
                            <field name="detailed_price_time" attrs="{'invisible': [('detailed_time','=', False)]}"/>
                        </group>
                        <group>
                            <field name="detailed_materials"/>
                            <field name="detailed_subtotal_price_materials" attrs="{'invisible': [('detailed_materials','=', False)]}"/>
                            <field name="detailed_price_materials" attrs="{'invisible': [('detailed_materials','=', False)]}"/>
                        </group>
                    </group>
                    <group>
                        <field name="partner_id" invisible="1"/>
                        <field name="company_id" invisible="1"/>
                        <field name="debit" invisible="1"/>
                        <field name="credit" invisible="1"/>
                        <field name="product_id" widget="many2one_barcode"/>
                        <field name="quantity"/>
                        <field name="product_uom_id" groups="uom.group_uom"/>
                        <field name="price_unit"/>
                        <field name="discount" string="Desc.%" groups="product.group_discount_per_so_line"/>
                        <field name="currency_id" invisible="1"/>
                    </group>
                    <group>
                        <field name="analytic_tag_ids" groups="analytic.group_analytic_tags" widget="many2many_tags"/>
                        <field name="account_id" options="{'no_create': True}" domain="[('company_id', '=', company_id)]" readonly="1"/>
                        <field name="tax_ids" widget="many2many_tags"/>
                        <field name="analytic_account_id" groups="analytic.group_analytic_accounting"/>
                    </group>
                    <label for="name" string="DescripciÃ³n" attrs="{'invisible': [('display_type', '!=', False)]}"/>
                    <label for="name" string="Seccion" attrs="{'invisible': [('display_type', '!=', 'line_section')]}"/>
                    <label for="name" string="Nota" attrs="{'invisible': [('display_type', '!=', 'line_note')]}"/>
                    <field name="name" widget="text"/>
                    <group>
                        <field name="price_subtotal" string="Subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <field name="price_total" string="Total" groups="account.group_show_line_subtotals_tax_included"/>
                    </group>
                    <field name="auto_create_task" invisible="1"/>
                    <div name="partida" attrs="{'invisible':[('auto_create_task','!=',True)]}">
                        <group string="Trabajos">
                            <group>
                                <field name="workforce_id" invisible="1" ref="product_task_material_work.mano_obra_00" domain="[('categ_id', '=', %(product_task_material_work.product_category_mo)d )]"/>
                            </group>
                            <field name="task_works_ids" nolabel="1" context="{'default_product_id': active_id}">
                                <tree string="Trabajos" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="work_id"/>
                                    <field name="name"/>
                                    <field name="hours" sum="Horas totales" widget="float_time"/>
                                    <field name="cost_price_unit" optional="show"/>
                                    <field name="sale_price_unit" optional="show"/>
                                    <field name="discount" groups="product.group_discount_per_so_line" optional="show"/>
                                    <field name="cost_price" sum="Total P.C." optional="hide"/>
                                    <field name="sale_price" sum="Total P.V." optional="show"/>
                                    <field name="work_margin" groups="product_task_material_work.group_sales_margin" optional="hide"/>
                                    <field name="work_margin_percent" optional="show" groups="product_task_material_work.group_sales_margin" widget="percentage"/>
                                </tree>
                            </field>
                            <group class="pull-right">
                                <field name="total_sp_work" invisible="1"/>
                                <field name="total_cp_work" invisible="1"/>
                                <field name="total_hours" invisible="1"/>
                                <label for="benefit_work_amount" string="Beneficio"/>
                                <div>
                                    <field name="benefit_work_amount" groups="product_task_material_work.group_sales_margin" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <span> | </span>
                                    <field name="benefit_work" groups="product_task_material_work.group_sales_margin" widget="percentage"/>
                                </div>
                            </group>
                        </group>
                        <group string="Materiales">
                            <field name="task_materials_ids" nolabel="1" context="{'default_product_id':active_id}">
                                <tree string="Materiales" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="material_id"/>
                                    <field name="name"/>
                                    <field name="quantity"/>
                                    <field name="cost_price_unit" optional="show"/>
                                    <field name="sale_price_unit" optional="show"/>
                                    <field name="discount" groups="product.group_discount_per_so_line" optional="show"/>
                                    <field name="cost_price" sum="Total P.C." optional="hide"/>
                                    <field name="sale_price" sum="Total P.V." optional="show"/>
                                    <field name="material_margin" groups="product_task_material_work.group_sales_margin" optional="hide"/>
                                    <field name="material_margin_percent" optional="show" groups="product_task_material_work.group_sales_margin" widget="percentage"/>
                                </tree>
                            </field>
                            <group class="pull-right">
                                <field name="total_sp_material" invisible="1"/>
                                <field name="total_cp_material" invisible="1"/>
                                <div>
                                    <field name="benefit_material_amount" groups="product_task_material_work.group_sales_margin" widget="monetary" options="{'currency_field': 'currency_id', 'field_digits': True}"/>
                                    <span> | </span>
                                    <field name="benefit_material" groups="product_task_material_work.group_sales_margin" widget="percentage"/>
                                </div>
                            </group>
                        </group>
                    </div>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
