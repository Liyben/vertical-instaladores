<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <!-- Both -->
    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">CRM - Leads with task</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form" />
        <field name="groups_id" eval="[(6, 0, [ref('hr_timesheet.group_hr_timesheet_user')])]"/>
        <field name="arch" type="xml">
            <!-- New fields -->
            <page name="extra" position="after">
                <page string="Tareas">
                    <field name="task_ids" readonly="1"/>
                </page>
            </page>
        </field>
    </record>

    <record id="crm_lead_view_form" model="ir.ui.view">
        <field name="name">Convert task with context</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm_project.crm_lead_view_form" />
        <field name="arch" type="xml">
            <!-- New fields -->
            <xpath expr="//button[@name='%(crm_project.crm_lead_convert2task_action)d']" position="attributes">
                <attribute name="context">{'default_project_id': project_id}</attribute>
            </xpath>
        </field>
    </record>
</odoo>