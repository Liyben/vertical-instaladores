<?xml version="1.0" encoding="utf-8"?>
<odoo>

        <!-- Plantilla Sale Service -->
    
    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">

        <xpath expr="//div[@class='page']" position="inside">
            <link rel="stylesheet" href="/product_task_material_work/static/src/css/report.css"/>
        </xpath>
        
        <!-- Tamaño de letra del report -->
        <xpath expr="//div[@class='page']" position="attributes">
          <attribute name="style">font-size: 11px !important;</attribute>
        </xpath>

        <!-- Impresión de albarán de venta-->
        <xpath expr="//h2[@class='mt16']" position="replace">
            <h2 class="mt16">
                <t t-if="not (env.context.get('proforma', False) or is_pro_forma or is_delivery_note)">
                    <span t-if="doc.state not in ['draft','sent']">Pedido # </span>
                    <span t-if="doc.state in ['draft','sent']">Presupuesto # </span>
                </t>
                <t t-if="env.context.get('proforma', False) or is_pro_forma">
                    <span>Factura Proforma # </span>
                </t>
                <t t-if="is_delivery_note">
                    <span>Albarán de venta # </span>
                </t>
                <span t-field="doc.name"/>
            </h2>
        </xpath>

        <xpath expr="//div[@id='informations']" position="replace">
            <div class="row mt32 mb32" id="informations">
                <!--<div t-if="doc.confirmation_date and doc.state not in ['draft','sent']" class="col-xs-3">
                    <strong>Date Ordered:</strong>
                    <p t-field="doc.confirmation_date"/>
                </div>-->
                <div t-if="doc.date_order and doc.state in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                    <strong>Fecha del presupuesto:</strong>
                    <p class="m-0" t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                </div>
                <div t-if="doc.date_order and doc.state not in ['draft','sent']" class="col-auto col-3 mw-100 mb-2">
                    <strong>Fecha del pedido:</strong>
                    <p class="m-0" t-field="doc.date_order" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                </div>
                <div t-if="doc.user_id.name" class="col-auto col-3 mw-100 mb-2">
                    <strong>Comercial:</strong>
                    <p class="m-0" t-field="doc.user_id"/>
                </div>
                <div t-if="doc.ref" class="col-auto col-3 mw-100 mb-2">
                    <strong>Nº cliente:</strong>
                    <p class="m-0" t-field="doc.ref"/>
                </div>
                <div t-if="doc.client_order_ref" class="col-auto col-3 mw-100 mb-2">
                    <strong>Ref. del cliente:</strong>
                    <p class="m-0" t-field="doc.client_order_ref"/>
                </div>
                <div name="payment_term" t-if="doc.payment_term_id" class="col-auto col-3 mw-100 mb-2">
                    <strong>Payment Terms:</strong>
                    <p class="m-0" t-field="doc.payment_term_id"/>
                </div>
                <div t-if="doc.validity_date and doc.state in ['draft', 'sent']" class="col-auto col-3 mw-100 mb-2" name="expiration_date">
                    <strong>Fecha de caducidad:</strong>
                    <p class="m-0" t-field="doc.validity_date"/>
                </div>
            </div>
        </xpath>

        <xpath expr="//table[@class='table table-sm o_main_table']" position="before">
            <t t-if="not display_discount">
                <t t-foreach="doc.order_line" t-as="line">
                    <t t-set="display_discount" t-value="any([work.discount for work in line.task_works_ids])"/>
                    <t t-if="not display_discount">
                        <t t-set="display_discount" t-value="any([material.discount for material in line.task_materials_ids])"/>
                    </t>
                </t>
            </t>
        </xpath>
        
        <xpath expr="//table[@class='table table-sm o_main_table']" position="replace">
            <table class="table table-sm o_main_table">
                <thead style="display: table-row-group">
                    <tr>
                        <th name="th_description" >Descripción</th>
                        <th name="th_quantity" class="text-right">Cantidad</th>
                        <th t-if="not (is_without_valuing and is_delivery_note)" name="th_priceunit" class="text-right">P. Und</th>
                        <th t-if="not (is_without_valuing and is_delivery_note) and display_discount" name="th_discount" class="text-right" groups="product.group_discount_per_so_line">Desc.%</th>
                        <th t-if="not (is_without_valuing and is_delivery_note)" name="th_subtotal" class="text-right">
                            <span groups="account.group_show_line_subtotals_tax_excluded">Importe</span>
                            <span groups="account.group_show_line_subtotals_tax_included">Total</span>
                        </th>
                    </tr>
                </thead>
                <tbody class="sale_tbody">

                    <t t-set="current_subtotal" t-value="0"/>

                    <t t-foreach="doc.order_line" t-as="line">

                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                        <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                        <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                            <t t-if="not line.display_type">
                                <td name="td_name"><span t-field="line.name"/></td>
                                <!-- IMPRESION DE SOLO TEXTO CUANDO LA CANTIDAD ES 0 -->
                                <td name="td_quantity" class="text-right">
                                    <t t-if="not line.product_uom_qty == 0">
                                        <span t-field="line.product_uom_qty"/>
                                        <span t-field="line.product_uom"/>
                                    </t>
                                </td>
                                <td t-if="not (is_without_valuing and is_delivery_note)" name="td_priceunit" class="text-right">
                                    <t t-if="not line.product_uom_qty == 0">
                                        <span t-field="line.price_unit"/>
                                    </t>
                                </td>
                                <td t-if="not (is_without_valuing and is_delivery_note) and display_discount" class="text-right" groups="product.group_discount_per_so_line">
                                    <t t-if="not line.product_uom_qty == 0">
                                        <span t-field="line.discount"/>
                                    </t>
                                </td>
                                <td t-if="not (is_without_valuing and is_delivery_note)" name="td_total" class="text-right o_price_total">
                                    <t t-if="not line.product_uom_qty == 0">
                                        <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                        <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                    </t>
                                </td>
                            </t>
                            <t t-if="line.display_type == 'line_section'">
                                <td name="td_section_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                                <t t-set="current_section" t-value="line"/>
                                <t t-set="current_subtotal" t-value="0"/>
                            </t>
                            <t t-if="line.display_type == 'line_note'">
                                <td name="td_note_line" colspan="99">
                                    <span t-field="line.name"/>
                                </td>
                            </t>
                        </tr>

                        <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                            <tr t-if="not (is_without_valuing and is_delivery_note)" class="is-subtotal text-right">
                                <td name="td_section_subtotal" colspan="99">
                                    <strong class="mr16">Subtotal</strong>
                                    <span t-esc="current_subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                                </td>
                            </tr>
                        </t>
                    </t>
                </tbody>      
            </table>
        </xpath>

        <xpath expr="//span[@t-field='line.name']/../.." position="inside">

                <t t-if="line.task_works_ids and line.detailed_time">
                    <t t-set="uom_hour" t-value="line.env.ref('uom.product_uom_hour')"/>
                    <t t-raw="'&lt;/tr&gt;&lt;tr class=\'works_title\'&gt;'"/>
                        <!--<td class="works_total_hours"></td>-->
                        <td class="works_lbl">Total Trabajos Und.</td>
                        <td class="works_total_hours">
                            <t t-if="line.detailed_time">
                                <!--<span t-field="line.total_hours"/>
                                <span t-esc="'{0:,.2f}'.format(line.total_hours * line.product_uom_qty).replace('.', ',')"/>
                                <span groups="uom.group_uom" t-field="uom_hour.name"/>-->
                            </t>
                        </td>
                        <td t-if="not (is_without_valuing and is_delivery_note)" class="works_hours_price">
                            <!--<t t-if="line.workforce_id and line.detailed_time">
                                <span t-field="line.workforce_id.lst_price" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                            </t>-->
                        </td>
                        <td t-if="not (is_without_valuing and is_delivery_note) and display_discount" class="text-right" groups="product.group_discount_per_so_line"></td>
                        <td t-if="not (is_without_valuing and is_delivery_note)" class="works_total_amount">
                            <t t-if="line.detailed_subtotal_price_time">
                                <span t-esc="'{0:,.2f}'.format(line.total_sp_work).replace('.', ',')"/> <span t-field="doc.pricelist_id.currency_id.symbol"/>
                                <!--<span t-field="line.total_sp_work" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>-->
                            </t>
                        </td>
                    <t t-foreach="line.task_works_ids" t-as="work">
                        <t t-raw="'&lt;/tr&gt;&lt;tr class=\'works_line\'&gt;'"/>
                        <!--<td class="works_line_name"></td>-->
                        <td class="works_line_name">
                            <t t-if="line.detailed_time">
                                <span t-field="work.name"/>
                            </t>
                        </td>
                        <td class="works_line_hours">
                            <t t-if="line.detailed_price_time">
                                <!--<span t-field="work.hours"/>-->
                                <span t-esc="'{0:,.2f}'.format(work.hours).replace('.', ',')"/>
                                <span groups="uom.group_uom" t-field="uom_hour.name"/>
                            </t>
                        </td>
                        <!-- REPORT DESGLOSE HORAS -->
                        <td t-if="not (is_without_valuing and is_delivery_note)" class="materials_line_price">
                            <t t-if="line.detailed_price_time">
                                <span t-field="work.sale_price_unit" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/>
                            </t>
                        </td>
                        <td class="materials_line_price" t-if="not (is_without_valuing and is_delivery_note) and display_discount" groups="product.group_discount_per_so_line">
                            <t t-if="line.detailed_price_time">
                                <span t-esc="'{0:,.2f}'.format(work.discount).replace('.', ',')"/>
                            </t>
                        </td>
                        <td t-if="not (is_without_valuing and is_delivery_note)" class="materials_line_price">
                            <t t-if="line.detailed_price_time">
                                <span t-esc="'{0:,.2f}'.format(work.sale_price_unit * work.hours * (1 - (work.discount/100))).replace('.', ',')"/> <span t-field="doc.pricelist_id.currency_id.symbol"/>
                              <!--<span t-field="work.sale_price" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/>-->  
                            </t>
                        </td>
                    </t>
                </t>
                <t t-if="line.task_materials_ids and line.detailed_materials">
                    <t t-raw="'&lt;/tr&gt;&lt;tr class=\'materials_title\'&gt;'"/>
                        <!--<td class="materials_lbl"></td>-->
                        <td class="materials_lbl">Total Materiales Und.</td>
                        <td></td>
                        <td t-if="not (is_without_valuing and is_delivery_note)"></td>
                        <td t-if="not (is_without_valuing and is_delivery_note) and display_discount" class="text-right" groups="product.group_discount_per_so_line"></td>
                        <td t-if="not (is_without_valuing and is_delivery_note)" class="materials_total_amount">
                            <t t-if="line.detailed_subtotal_price_materials">
                                <span t-esc="'{0:,.2f}'.format(line.total_sp_material).replace('.', ',')"/> <span t-field="doc.pricelist_id.currency_id.symbol"/>
                                <!--<span t-field="line.total_sp_material" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>-->
                            </t>
                        </td>
                    <t t-foreach="line.task_materials_ids" t-as="material">
                        <t t-raw="'&lt;/tr&gt;&lt;tr class=\'materials_line\'&gt;'"/>
                        <!--<td class="materials_line_name"></td>-->
                        <td class="materials_line_name">
                            <!--<span t-field="material.material_id.display_name"/>-->
                            <t t-if="material.name"><span t-field="material.name"/></t>
                            <t t-if="not material.name"><span t-field="material.material_id.name"/></t>
                        </td>
                        <td class="materials_line_qty">
                            <!--<span t-field="material.quantity"/>-->
                            <span t-esc="'{0:,.2f}'.format(material.quantity).replace('.', ',')"/>
                            <span groups="uom.group_uom" t-field="material.material_id.uom_id.name"/>
                        </td>
                        <td t-if="not (is_without_valuing and is_delivery_note)" class="materials_line_price">
                            <t t-if="line.detailed_price_materials">
                                <span t-field="material.sale_price_unit" t-field-options='{"widget": "monetary", "display_currency": "doc.pricelist_id.currency_id"}'/>
                            </t>
                        </td>
                        <td class="materials_line_qty" t-if="not (is_without_valuing and is_delivery_note) and display_discount" groups="product.group_discount_per_so_line">
                            <t t-if="line.detailed_price_materials">
                                <span t-esc="'{0:,.2f}'.format(material.discount).replace('.', ',')"/>
                            </t>
                        </td>
                        <td t-if="not (is_without_valuing and is_delivery_note)" class="materials_line_price">
                            <t t-if="line.detailed_price_materials">
                                <span t-esc="'{0:,.2f}'.format(material.sale_price_unit * material.quantity * (1 - (material.discount/100))).replace('.', ',')"/> <span t-field="doc.pricelist_id.currency_id.symbol"/>
                                <!--<span t-field="material.sale_price" t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;doc.pricelist_id.currency_id&quot;}"/>-->  
                            </t>
                        </td>
                    </t>
                </t>

        </xpath>
    </template>

    <template id="report_saleorder_sales_delivery_note">
        <t t-call="web.html_container">
            <t t-set="is_delivery_note" t-value="True"/>
            <t t-set="is_without_valuing" t-value="True"/>
            <t t-foreach="docs" t-as="doc">
                <t t-call="sale.report_saleorder_document" t-lang="doc.partner_id.lang"/>
            </t>
        </t>
    </template>

</odoo>
