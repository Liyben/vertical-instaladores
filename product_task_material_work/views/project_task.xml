    <record model="ir.ui.view" id="view_task_form2_inherit">
        <field name="name">project.task.merged.tasks</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button class="oe_stat_button" type="object"
                        name="action_merge_tasks"
                        icon="fa-puzzle-piece">
                    <field string="Tareas Unificadas" name="merge_task_count" widget="statinfo"/>
                </button>
            </div>
            <xpath expr="//notebook/page[@name='extra_info']" position="after">
                <page string="Customer Signature" name="customer_signature">
                    <group>
                        <field name="signed_by" readonly="signature"/>
                        <field name="signed_on" readonly="signature"/>
                        <field name="signature" widget="signature"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="project_task_oppor_form_view">
        <field name="name">project.task.oppor.form</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="sale_project.view_sale_project_inherit_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='allow_billable']" position='after'>
                <field name="oppor_id"/>
                <field name="date_task"/>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="view_project_task_work_form">
        <field name="name">project.task.work.form.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="hr_timesheet.view_task_form2_inherited"/>
        <field name="arch" type="xml">
            <xpath expr="//group[@name='timesheet_error']" position='before'>
                <separator string="Trabajo realizado"/>
            </xpath>
            <xpath expr="//page[@name='page_timesheets']" position='inside'>
                <!--<separator string="Tareas a realizar"/>
