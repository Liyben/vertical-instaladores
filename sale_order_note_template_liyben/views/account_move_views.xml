<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_invoice_retention_form">
        <field name="name">Retenciones en Facturas</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='narration']" position="replace">
                <group class="mt-2 mt-md-0">
                    <field name="narration" nolabel="1" placeholder="Terms and conditions..."/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>