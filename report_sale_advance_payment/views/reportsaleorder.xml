<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_saleorder_document" inherit_id="sale.report_saleorder_document">

        <xpath expr="//div[@name='total']/div" position="inside">
            <t t-if="doc.account_payment_ids">
                <table class="table table-sm">
                    <t t-foreach="doc.account_payment_ids" t-as="account_payment">
                        <tr style="">
                            <td name="account_payment_date">
                                <span>Pago anticipado: </span><span t-esc="account_payment.date" t-options="{&quot;widget&quot;: &quot;date&quot;}"/>
                            </td>
                            <td name="account_payment_amount" class="text-right o_price_total">
                                <span t-esc="account_payment.amount" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                            </td>
                        </tr>
                    </t>
                    <tr class="border-black o_total">
                        <td name="td_amount_total_label"><strong>Importe pendiente</strong></td>
                        <td name="td_amount_total" class="text-right">
                            <span t-field="doc.amount_residual" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.pricelist_id.currency_id}"/>
                        </td>
                    </tr>
                </table>
            </t>
        </xpath>

    </template>

</odoo>