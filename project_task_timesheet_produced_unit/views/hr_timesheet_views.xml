<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_analytic_line_form" model="ir.ui.view">
        <field name="name">Add cost unit</field>
        <field name="model">account.analytic.line</field>
        <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/group" position="after">
                <group name="cost_produced_unit" string="Unidades Producidas">
                    <field name="product_produced_unit_id" domain="product_id_domain"/>
                    <field name="product_id_domain" invisible="1"/>
                    <field name="produced_unit" />
                    <field name="cost_produced_unit" widget="monetary"/>
                    <field name="total_cost_produced_unit" widget="monetary"/>
                </group>
            </xpath>
        </field>
    </record>

    <record id="account_analytic_line_tree" model="ir.ui.view">
            <field name="name">Add cost unit</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='unit_amount']" position="before">
                    <field name="product_produced_unit_id" optional="show" domain="product_id_domain"/>
                    <field name="product_id_domain" invisible="1"/>
                    <field name="produced_unit" optional="show"/>
                    <field name="cost_produced_unit" widget="monetary" optional="show"/>
                    <field name="total_cost_produced_unit" widget="monetary" optional="show"/>
                </xpath>
            </field>
        </record>
</odoo>