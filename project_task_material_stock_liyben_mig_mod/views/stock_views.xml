<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record model="ir.ui.view" id="inherited_stock_picking_type_form">
        <field name="name">inherited.stock.picking.type.form</field>
        <field name="model">stock.picking.type</field>
        <field name="inherit_id" ref="stock.view_picking_type_form"/>
        <field name="arch" type="xml">
            <xpath expr="//form/sheet" position="inside">
                <group>
                    <group string="Operaciones de Materiales desde la tarea">
                        <field name="stock_move_from_task"/>
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="procure_method" groups="analytic.group_analytic_accounting"/>
            </xpath>
        </field>
    </record>
    
</odoo>
