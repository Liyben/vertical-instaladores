<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="stock_picking_inherited_form_purchase" model="ir.ui.view">
        <field name="name">stock.picking.inherited.form.purchase</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" name="action_view_purchase_orders" type="object" icon="fa-credit-card" groups='purchase.group_purchase_user' attrs="{'invisible': [('purchase_order_count', '=', 0)]}">
                    <div class="o_field_widget o_stat_info">
                        <span class="o_stat_value"><field name="purchase_order_count"/></span>
                        <span class="o_stat_text">Compras</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>

    <record model="ir.ui.view" id="inherited_stock_picking_form">
        <field name="name">inherited.stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='move_ids_without_package']/tree/field[@name='product_id']" position="after">
                <field name="procure_method" groups="analytic.group_analytic_accounting"/>
            </xpath>
        </field>
    </record>
    
</odoo>